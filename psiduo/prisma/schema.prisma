generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  emailVerified DateTime?
  password      String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  accounts      Account[]
  psicologo     Psicologo?
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Psicologo {
  id                String      @id @default(uuid())
  criadoEm          DateTime    @default(now())
  atualizadoEm      DateTime    @updatedAt
  nome              String
  crp               String      @unique
  foto              String?
  whatsapp          String
  abordagem         String
  especialidades    String[]
  temas             String[]
  preco             Decimal     @db.Decimal(10, 2)
  duracaoSessao     Int
  idade             Int?
  genero            String?
  etnia             String?
  sexualidade       String?
  publicoAlvo       String[]
  biografia         String?
  videoApresentacao String?
  redesSociais      Json?
  acessos           Int         @default(0)
  agendaConfig      Json?
  plano             Plano       @default(DUO_I)
  verificado        Boolean     @default(false)
  status            String      @default("PENDENTE")
  cidade            String?
  estado            String?
  slug              String?     @unique
  diretividade      String?
  estilo            String?
  religiao          String?
  cliquesWhatsapp   Int         @default(0)
  userId            String      @unique
  avaliacoes        Avaliacao[]
  user              User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  pacientes         Paciente[]
}

model Avaliacao {
  id          String    @id @default(uuid())
  nota        Int
  comentario  String?
  data        DateTime  @default(now())
  psicologoId String
  localizacao String?
  psicologo   Psicologo @relation(fields: [psicologoId], references: [id])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  ip        String?
  userAgent String?
  success   Boolean
  metadata  Json?
  createdAt DateTime @default(now())
}

model Paciente {
  id              String           @id @default(cuid())
  nome            String
  tokenAcesso     String           @unique
  psicologoId     String
  ativo           Boolean          @default(true)
  criadoEm        DateTime         @default(now())
  dataInicio      DateTime         @default(now())
  
  psicologo       Psicologo        @relation(fields: [psicologoId], references: [id], onDelete: Cascade)
  registros       RegistroDiario[]
}

model RegistroDiario {
  id          String   @id @default(cuid())
  pacienteId  String
  data        DateTime
  humor       Int      
  sono        Int      
  notas       String?
  tags        String[]
  criadoEm    DateTime @default(now())
  
  paciente    Paciente @relation(fields: [pacienteId], references: [id], onDelete: Cascade)
}



enum Plano {
  DUO_I
  DUO_II
}
